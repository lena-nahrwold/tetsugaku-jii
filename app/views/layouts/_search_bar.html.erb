<div class="row mb-4">
  <div class="col-md-12">
    <%= form_tag('/search') do %>
      <div class="input-group">
        <%= text_field_tag :search_term, @search_term, placeholder: "Search...", class: "form-control mr-4 rounded" %>
        <span class="input-group-btn">
          <button name="commit" value="Search" class="btn btn-primary">Search</button>
        </span>
      </div>
    <% end %>
  </div>
</div>